{% extends "common/column_left.twig" %}
{% block content %}
<div class="container-fluid">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">{{ heading_title }}</h3>
      <div class="float-right">
        <a href="{{ log_link }}" class="btn btn-info">{{ text_log }}</a>
      </div>
    </div>
    <div class="card-body">
      {% if error_warning %}
      <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
      {% endif %}
      {% if success %}
      <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}</div>
      {% endif %}

      <form action="{{ action }}" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label>{{ entry_status }}</label>
          <select name="module_advanced_autopost_status" class="form-control">
            <option value="1" {% if module_advanced_autopost_status == 1 %}selected{% endif %}>Enabled</option>
            <option value="0" {% if module_advanced_autopost_status != 1 %}selected{% endif %}>Disabled</option>
          </select>
        </div>

        <div class="form-group">
          <label>{{ entry_auto_mode }}</label>
          <select name="module_advanced_autopost_auto_mode" class="form-control">
            <option value="1" {% if module_advanced_autopost_auto_mode == 1 %}selected{% endif %}>Yes</option>
            <option value="0" {% if module_advanced_autopost_auto_mode != 1 %}selected{% endif %}>No</option>
          </select>
          <small class="form-text text-muted">{{ help_auto_mode }}</small>
        </div>

        <div class="form-group">
          <label>{{ entry_facebook_token }}</label>
          <input type="text" class="form-control" name="module_advanced_autopost_facebook_token"
                 value="{{ module_advanced_autopost_facebook_token is not null ? module_advanced_autopost_facebook_token : '' }}">
        </div>

        <div class="form-group">
          <label>{{ entry_instagram_token }}</label>
          <input type="text" class="form-control" name="module_advanced_autopost_instagram_token"
                 value="{{ module_advanced_autopost_instagram_token is not null ? module_advanced_autopost_instagram_token : '' }}">
        </div>

        <div class="form-group">
          <label>{{ entry_instagram_user_id }}</label>
          <input type="text" class="form-control" name="module_advanced_autopost_instagram_user_id"
                 value="{{ module_advanced_autopost_instagram_user_id is not null ? module_advanced_autopost_instagram_user_id : '' }}">
        </div>

        <div class="form-group">
          <label>{{ entry_post_template }}</label>
          <textarea class="form-control" rows="3" name="module_advanced_autopost_post_template">{{ module_advanced_autopost_post_template }}</textarea>
          <small class="form-text text-muted">{{ help_post_template }}</small>
        </div>

        <div class="form-group">
          <label>{{ entry_post_images }}</label>
          <select name="module_advanced_autopost_post_images" class="form-control">
            <option value="1" {% if module_advanced_autopost_post_images == 1 %}selected{% endif %}>Yes</option>
            <option value="0" {% if module_advanced_autopost_post_images != 1 %}selected{% endif %}>No</option>
          </select>
          <small class="form-text text-muted">{{ help_post_images }}</small>
        </div>

        <button type="submit" class="btn btn-primary">{{ entry_save }}</button>
        <a href="{{ cancel }}" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>
</div>
{% endblock %}
